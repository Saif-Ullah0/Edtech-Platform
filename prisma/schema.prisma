generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  password  String
  role      Role       @default(USER)
  courses   Enrollment[]
  createdAt DateTime   @default(now())
}

model Category {
  id    String   @id @default(cuid())
  name  String
  slug  String   @unique
  courses Course[]
}

model Course {
  id          String    @id @default(cuid())
  title       String
  description String
  price       Float
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  modules     Module[]
  enrollments Enrollment[]
}

model Module {
  id       String   @id @default(cuid())
  title    String
  content  String
  course   Course   @relation(fields: [courseId], references: [id])
  courseId String
}

model Enrollment {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  String
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
